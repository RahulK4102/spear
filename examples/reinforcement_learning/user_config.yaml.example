SPEAR:
  LAUNCH_MODE: "standalone_executable"
  STANDALONE_EXECUTABLE: "C:/github/spear/code/unreal_projects/RobotProject/Standalone-Development/WindowsNoEditor/RobotProject/Binaries/Win64/RobotProject-Cmd.exe"
  TEMP_DIR: "C:/github/spear/examples/reinforcement_learning"
  CUSTOM_COMMAND_LINE_ARGUMENTS: ["-dx12"]
  RENDER_OFFSCREEN: True

SIMULATION_CONTROLLER:
  WORLD_PATH_NAME: "/Game/DefaultMap.DefaultMap"        # full path to the map including the repeated name, e.g., "/Game/NewMap.NewMap"
  LEVEL_NAME: "/Game/DefaultMap"                        # full path to the map excluding the repeated name, e.g., "/Game/NewMap"
  TASK: "PointGoalNavTask"
  AGENT: "SphereAgent"                                  # "SphereAgent" or "OpenBotAgent"

  SPHERE_AGENT:
    ACTION_COMPONENTS: ["apply_force"]    # "apply_force"
    OBSERVATION_COMPONENTS: ["compass"]   # "compass", "camera"
    STEP_INFO_COMPONENTS: ["debug_info"]  # "debug_info"
    SPHERE:
      ACTOR_NAME: "Sphere"
      MESH_SCALE: 0.5
      MASS_SCALE: 1.0
      MAX_ANGULAR_VELOCITY: 1.0
      LINEAR_DAMPING: 0.0
      ANGULAR_DAMPING: 0.0
    COMPASS:
      GOAL_ACTOR_NAME: "Goal"
      OFFSET_TO_GOAL_SCALE: 1.0
      LINEAR_VELOCITY_SCALE: 1.0
      YAW_SCALE: 1.0
    CAMERA:
      ACTOR_NAME: "CameraActor"
      RENDER_PASSES: ["final_color"] # "final_color", "segmentation", "depth_glsl", "normals", "lens_distortion" 
      IMAGE_HEIGHT: 512
      IMAGE_WIDTH: 512
      FOV: 90.0
      POSITION_OFFSET_X: 0.0
      POSITION_OFFSET_Y: 0.0
      POSITION_OFFSET_Z: 1.0
    APPLY_FORCE:
      FORCE_SCALE: 1.0
      ROTATE_SCALE: 1.0

  POINT_GOAL_NAV_TASK:
    AGENT_ACTOR_NAME: "Sphere"
    GOAL_ACTOR_NAME: "Goal"
    GOAL_SCALE: 0.5
    OBSTACLE_IGNORE_ACTOR_NAMES: ["Floor"]
    RANDOM_SEED: 0
    REWARD:
      HIT_GOAL: 100.0
      HIT_OBSTACLE: -100.0
      DISTANCE_TO_GOAL_SCALE: 0.00001
    EPISODE_BEGIN:
      AGENT_POSITION_X_MIN: -100.0
      AGENT_POSITION_X_MAX: 100.0
      AGENT_POSITION_Y_MIN: -100.0
      AGENT_POSITION_Y_MAX: 100.0
      AGENT_POSITION_Z: 1.0
      GOAL_POSITION_X_MIN: -250.0
      GOAL_POSITION_X_MAX: 250.0
      GOAL_POSITION_Y_MIN: -250.0
      GOAL_POSITION_Y_MAX: 250.0
      GOAL_POSITION_Z: 1.0
      SPAWN_DISTANCE_THRESHOLD: 50.0

  VISUALIZER:
    ACTOR_NAME: "DebugCameraActor" # "DebugCameraActor" or "ObservationCameraActor"
    SPAWN_CAMERA: False
