{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "processing",
      "type": "python",
      "request": "launch",
      "program": "Python_Export_Pipeline/processing.py",
      "console": "integratedTerminal",
      "args": [
        "-n", "6",
        "--rerun",
        "--scene_path", "${input:scene_path}",
        // "--objects", "cabinet_02",
      ]
    },
    {
      "name": "report",
      "type": "python",
      "request": "launch",
      "program": "Python_Export_Pipeline/report.py",
      "console": "integratedTerminal",
      "args": [
        "--scene_path", "${input:scene_path}",
      ]
    },
    {
      "name": "sim",
      "type": "python",
      "request": "launch",
      "program": "sim.py",
      "console": "integratedTerminal",
      "python": "/opt/miniconda3/envs/fetch_sim/bin/mjpython",
      "args": [
        "--filename", "${input:scene_path}/scene.mjb",
        // "--norender"
      ]
    }
  ],
  "inputs": [
    {
      "id": "scene_path",
      "default": "scenes/kujiale_0000_new",
      "description": "Scene Path",
      "type": "promptString",
    }
  ]
}